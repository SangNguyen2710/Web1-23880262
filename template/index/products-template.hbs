<div class="row align-items-center py-5">
  {{#each data}}
    <div class="col-lg-3 col-md-6 col-sm-12 text-center">
      <img
        src="{{imagepath}}"
        class="img-fluid rounded-top"
        alt="{{name}}"
        onmouseover="setActiveImage(this,'{{imagepath}}')"
        onmouseout="setActiveImage(this,'{{imagepath}}', false)"
      />
      <h3>{{name}}</h3>
      <p class="text-black-50">
        {{summary}}
      </p>
      <a href="?request=products/{{id}}">Read more</a>
    </div>
  {{/each}}
</div>