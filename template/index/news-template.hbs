<div class="container">
  <h1 class="text-bold text-black">News</h1>
  <div class="row g-5">
    <!--Cá»™t 1-->
    {{#each data}}
      <div class="col-4">
        <div class="row">
          <div class="col-lg-3 col-md-5 col-sm-12">
            <h3
              class="text-white text-bold text-center py-2 px-2 rounded-3"
              id="date"
            >
              {{date}}
            </h3>
          </div>
          <div class="col-lg-9 col-md-7 col-sm-12">
            <h3 class="text-black text-bold">
              {{name}}
            </h3>
            <p class="text-black-50">
              {{summary}}
            </p>
            <a
              href="?request=news/{{id}}"
              onclick="
                    document.getElementById('main').style.display='none';
                    document.getElementById('content').style.display='block';
                    "
            >Read more</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>